<%- include("partials/header")-%>
<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3 mt-3">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" autofocus />
  </div>
  <div class="mb-3 mt-3">
    <label>Post</label>
    <textarea
      class="form-control"
      name="postBody"
      cols="30"
      rows="5"
    ></textarea>
  </div>

  <button class="btn-primary btn w-25" type="submit" name="button">
    Publish
  </button>
</form>

<%- include("partials/footer")-%>
